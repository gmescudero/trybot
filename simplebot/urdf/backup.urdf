<?xml version='1.0'?>

<robot name="simplebot">
<!-- ******** BASE LINK ******** -->
  <link name="base">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.25"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <box size="0.1 0.1 0.25"/>
      </geometry>
    </collision>

  </link>

<!-- ******** MOVE LINK ******** -->
  <link name="child_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.10" />
      <inertia ixx="0.001" ixy="0.001" ixz="0.001" iyy="0.001" iyz="0.001" izz="0.001" />
    </inertial>
  </link>

<!-- ******** JOINTS ******** -->
  <joint name="joint1" type="continuous">
    <parent link="base"/>
    <child link="child_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 .2" rpy="0 0 0"/>
  </joint>

<!-- ******** GAZEBO ******** -->
  <!-- ROS Control plugin for Gazebo -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/simplebot</robotNamespace>
      <legacyModeNS value="true"/>
    </plugin>
  </gazebo>

  <!-- transmission -->
  <transmission name="transmision_1">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_1">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="joint1">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <!-- colors -->
  <gazebo reference="base">
    <material>Gazebo/Orange</material>
  </gazebo>

<!--end robot-->
</robot>